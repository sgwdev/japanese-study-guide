@page "{id:int}"
@model Web.Pages.Vocabulary.Lists.DetailsModel
@using Core.Entities.VocabularyAggregate;
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Vocabulary list</h3>
        </div>
    </div>
</div>
<hr />

<div class="container">
    <h4>@Model.WordList.Name</h4>

    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                @foreach (Word w in Model.WordList.Words)
                {
                    <li class="list-group-item">@w.Label : @w.Pronunciation</li>
                }
            </ul>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3">
            <a class="btn btn-primary" asp-page="Edit" asp-route-id="@Model.WordList.Id">Edit</a>
            <a class="btn btn-secondary" asp-page="Index">Back</a>
        </div>
    </div>
</div>
