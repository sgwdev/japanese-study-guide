@page
@model Web.Pages.Vocabulary.Lists.AddModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>New Vocabulary List</h3>
        </div>
    </div>
</div>

<hr />
<div class="container">
    <form method="post" id="wordlist-form">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="listName">List name</label>
                <input type="text" asp-for="WordList.Name" id="listName" class="form-control"/>
                <span asp-validation-for="WordList.Name" class="error"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Words</label>
                <select class="custom-select" asp-for="SelectedWordsId" asp-items="@(new SelectList(Model.Words, "Id", "Label"))" multiple size="10">
                    <option value="" disabled>Select...</option>
                </select>
                <span asp-validation-for="WordList.Words" class="error"></span>
            </div>
        </div>
        
        <input class="btn btn-primary" type="submit" value="Create" />
        <a class="btn btn-secondary" asp-page="Index">Back</a>
    </form>
</div>
