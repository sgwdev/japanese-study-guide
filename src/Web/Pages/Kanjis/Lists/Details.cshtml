@page "/kanji/lists/{id:int}"
@model Web.Pages.Kanjis.Lists.DetailsModel
@using Core.Entities.KanjiAggregate;
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Kanji list</h3>
        </div>
    </div>
</div>
<hr />

<div class="container">
    <h4>@Model.KanjiList.Name</h4>

    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                @foreach (Kanji kanji in Model.KanjiList.Kanji)
                {
                    <li class="list-group-item">@kanji.Character</li>
                }
            </ul>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3">
            <a class="btn btn-primary" asp-page="Edit" asp-route-id="@Model.KanjiList.Id">Edit</a>
            <a class="btn btn-secondary" asp-page="Index">Back</a>
        </div>
    </div>
</div>
