@page "/kanji/lists/edit/{id:int}"
@model Web.Pages.Kanjis.Lists.EditModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Edit Kanji List</h3>
        </div>
    </div>
</div>

<hr />
<div class="container">
    <form method="post" id="kanjilist-form">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="listName">List name</label>
                <input type="text" asp-for="KanjiList.Name" id="listName" class="form-control" />
                <span asp-validation-for="KanjiList.Name" class="error"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Kanji</label>
                <select class="custom-select" asp-for="SelectedKanjiId" asp-items="@(new SelectList(Model.Kanji, "Id", "Character"))" multiple size="10">
                    <option value="" disabled>Select...</option>
                </select>
                <span asp-validation-for="KanjiList.Kanji" class="error"></span>
            </div>
        </div>

        <input class="btn btn-primary" type="submit" value="Save" />
        <a class="btn btn-secondary" asp-page="Index">Back</a>
    </form>
</div>
